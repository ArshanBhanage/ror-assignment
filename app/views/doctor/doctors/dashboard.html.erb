<div class="container">
  <div class="row gx-5">
    <div class="col">
      <div class="p-3 border bg-light">
        <div class="d-flex justify-content-between">
          <h4>Welcome, <%= current_user.name %></h4>
          <%= search_form_for @q, url: :receptionist_dashboard, class: "d-flex" do |f| %>
            <%= f.search_field :first_name_or_first_name_or_email_cont, placeholder: "Search", class: "form-control me-2" %>
            <%= f.submit "Search", class: "btn btn-outline-success" %>
          <% end %>          
        </div>
      </div>
      <table id= "patients" class="table table-striped" style="width:100%">
        <thead>
          <tr>
            <th scope="col">Name</th>
            <th scope="col">DOB</th>
            <th scope="col">Gender</th>
            <th scope="col">Address</th>
            <th scope="col">Phone</th>
            <th scope="col">Email</th>
          </tr>
        </thead>
        <tbody>
          <% @patients.each do |patient| %>
            <tr>
              <td><%= patient.name%></td>
              <td><%= patient.dob%></td>
              <td><%= patient.gender%></td>
              <td><%= patient.address%></td>
              <td><%= patient.phone%></td>
              <td><%= patient.email%></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @patients %>
    </div>
  </div>
</div>