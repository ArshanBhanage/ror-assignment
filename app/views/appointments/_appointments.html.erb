<div class="container">
  <div class="row gx-5">
    <div class="col">
      <div class="p-3 border bg-light">Appointments</div>
      <table id= "appointments" class="table">
      <thead>
          <tr>
          <th scope="col">#</th>
          <th scope="col">Patient Name</th>
          <th scope="col">Doctor</th>
          <th scope="col">Appointment Time</th>
          <th scope="col">Reason</th>
          <th scope="col"></th>
          </tr>
      </thead>
      <tbody>
          <% @appointments.each do |appointment| %>
          <tr>
              <th scope="row"><%= appointment.id%></th>
              <td><%= Patient.find(appointment.patient_id).name %></td>
              <td><%= User.find(appointment.doctor_id).name %></td>
              <td><%= appointment.appointment_date %></td>
              <td><%= appointment.reason %></td>
              <td>
                <div class="btn-group">
                  <button class="btn btn-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                    Action
                  </button>
                  <ul class="dropdown-menu">
                    <%= link_to "Edit this patient", edit_appointment_path(appointment), class: "dropdown-item" %>
                    <li><hr class="dropdown-divider"></li>
                    <%= button_to "Delete appointment", appointment, method: :delete, class: "dropdown-item"%>
                  </ul>
                </div>              
              </td>
          </tr>
          <% end %>
      </tbody>
      </table>      
    </div>
  </div>
</div>  
