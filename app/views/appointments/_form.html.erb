  <% end %>

  <%= form.hidden_field :patient_id, value: @patient.id if @patient %>

  <div>
    <%= form.label :doctor_id, class: 'form-control', style: "display: block" %>
    <%= form.collection_select :doctor_id, @doctors, :id, :name %>
  </div>

  <div>
    <%= form.label :appointment_date, style: "display: block" %>
    <%= form.datetime_field :appointment_date %>
  </div>

  <div>
    <%= form.label :reason, style: "display: block" %>
    <%= form.text_area :reason %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
