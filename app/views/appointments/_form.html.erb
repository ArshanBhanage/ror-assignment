<%= form_with(model: appointment, class: "row g-3") do |form| %>
  <% if appointment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

      <ul>
        <% appointment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form.hidden_field :patient_id, value: @patient.id if @patient %>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Doctor</label>
    <div class="col-sm-10">
      <%= form.collection_select :user_id, @doctors, :id, :name, {}, class: "form-select" %>
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Appointment Time</label>
    <div class="col-sm-10">
      <%= form.datetime_field :appointment_date , class: "form-control" %>
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">Reason</label>
    <div class="col-sm-10">
      <%= form.text_area :reason , class: "form-control" %>
    </div>
  </div>  
  <div class="container">
    <div class="row align-items-start">
      <div class="col">
        <%= form.submit "Save", type: "submit", class: "btn btn-success" %>
      </div>
    </div>  
  </div>    
<% end %>
