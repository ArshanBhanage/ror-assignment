<%= form_with(model: patient, class: "row g-3") do |form|%>
  <% if patient.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
        <% patient.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6">
    <label class="form-label">First Name</label>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>
  <div class="col-md-6">
    <label class="form-label">Last Name</label>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="col-md-6">
    <label class="form-label">Email</label>
    <%= form.text_field :email, class: "form-control" %>
  </div>
  <div class="col-6">
    <label class="form-label">Phone</label>
    <%= form.text_field :phone, class: "form-control" %>
  </div>
  <div class="col-12">
    <label class="form-label">Address</label>
    <%= form.text_area :address, class: "form-control" %>
  </div>
  <div class="col-md-6">
    <label class="form-label">Date of Birth</label>
    <%= form.date_field :dob, class: "form-control" %>
  </div>
  <div class="col-md-6">
    <label class="form-label">Gender</label><br/>
    <%= form.select :gender, [['Choose', ''], ['Male', 'Male'], ['Female', 'Female'], ['Other', 'Other']], {}, class: "form-select" %>
  </div>
  <div class="col-12">
    <%= form.submit "Save", class: "btn btn-success" %>
  </div>
<% end %>

