<div class="container px-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center mb-4">Sign Up</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "row g-3") do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">First Name</label>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control" %>
          </div>
          <div class="col-md-6">
            <label class="form-label">Last Name</label>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control" %>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">Email</label>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="col-md-6">
            <label class="form-label">Role</label>
            <%= f.select :role, [['Choose', '']] + User.roles.keys.map { |role| [role.capitalize, role] }, {}, class: "form-select" %>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-md-6">
            <label class="form-label">Password</label>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="col-md-6">
            <label class="form-label">Confirm Password</label>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
        </div>
        <div class= "row mb-3">
          <div class="col-12">
            <%= f.submit "Sign up", data: {turbo: false}, class: "btn btn-primary" %>
          </div>
        </div>
        <div class= "row mb-3">
          <div class="col-12">
            <%= render "devise/shared/links" %>
          </div>
        </div>          
      <% end %>
    </div>
  </div>
</div>
